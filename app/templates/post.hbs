<article class="meow-text-content">
  <h2>{{model.title}}</h2>
  <p>{{model.author}}</p>
  <p>{{moment-format model.date}}</p>
  <p>{{model.category}}</p>
  {{#each model.image as |image|}}
    <div class="meow-post-image-box">
      <img class="meow-post-image" src={{image.image}} alt="" />
    </div>
  {{/each}}
  <section>
    {{markdown-to-html markdown=model.body}}
  </section>
  <footer>
    {{#link-to 'update' model.id}}Update Post{{/link-to}}
    <br>
    <button {{action 'deletePost' model}} class="btn-link">Delete Post</button>
    <br>
    {{comment-form saveComment="saveComment" replyToComment="replyToComment" post=model}}
  </footer>
</article>
